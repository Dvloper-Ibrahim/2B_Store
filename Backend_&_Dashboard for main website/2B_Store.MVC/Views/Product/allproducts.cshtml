@model List<ProductDTO>
@{
    ViewData["Title"] = "allproducts";
    Layout = "_AdminDashboardLayout";
}

@section PageTitle {
    <title>2B - Products</title>
}

<div class="container-fluid">
    <h2>All Products</h2>
    <a asp-action="addNew" class="btn btn-primary mb-3">Add new product</a>

    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>SubCategory</th>
                <th>Price</th>
                <th>Stock</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var prod in Model)
            {
                <tr>
                    <td>@prod.Id</td>
                    <td>@prod.ProductNameEN</td>
                    <td>@prod.SubCategory?.NameEN</td>
                    <td>@prod.Price</td>
                    <td>@prod.Stock</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@prod.Id" class="btn btn-success">Edit</a> | 
                        <form asp-action="Delete" method="post" class="d-inline">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="id" value="@prod.Id" />
                            <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this product?')">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>

@section Scripts{
    <script>
        let sideLinks = document.querySelectorAll(".side-nav");
        sideLinks.forEach(e => e.classList.remove("active"));

        let activeLink = document.getElementById("products");
        activeLink.classList.add("active");
    </script>
}

