
@{
    ViewData["Title"] = "Index";
}
@using _2B_Store.DTO;

@model List<OrderDTO>

<h2>All Orders</h2>

<div class="table-responsive">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Order Date</th>
                <th>Total Amount</th>
                <th>Payment Status</th>
                <th>Tracking Information</th>
                <th>User ID</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.Id</td>
                    <td>@order.OrderDate</td>
                    <td>@order.TotalAmount</td>
                    <td>@order.PaymentStatus</td>
                    <td>@order.TrackingInformation</td>
                    <td>@order.UserId</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@order.Id" class="btn btn-primary">Edit</a>
                        <a asp-action="Details" asp-route-id="@order.Id" class="btn btn-info">Details</a>
                        <a asp-action="Delete" asp-route-id="@order.Id" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


