@model List<_2B_Store.DTO.CategoryDTO>




<h2>All Categories</h2>

<div class="row row-cols-1 row-cols-md-3 g-4">
    @foreach (var category in Model)
    {
        <div class="col">
            <div class="card border-primary shadow-sm">
                @if (!string.IsNullOrEmpty(category.Image))
                {
                    <img src="@Url.Content(category.Image)" class="card-img-top" alt="Category Image">
                }
                <div class="card-body">
                    <h5 class="card-title">@category.NameEN</h5>
                    <p class="card-text">@category.DescriptionEN</p>
                    <a href="@Url.Action("Edit", new { id = category.Id })" class="btn btn-success">Edit</a>
                    <form asp-action="Delete" method="post" class="d-inline">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="id" value="@category.Id" />
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this category?')">Delete</button>
                    </form>
                </div>
            </div>
        </div>
    }
</div>

<a asp-action="Create" class="btn btn-primary mt-4">Create New Category</a>





















