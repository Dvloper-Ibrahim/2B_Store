@using Microsoft.AspNetCore.Identity;
@*@model _2B_Store.DTO.RoleDto*@

@model IdentityRole


@{
    ViewData["Title"] = "Create";
    Layout = "_AdminDashboardLayout";

}

@section PageTitle {
    <title>2B - Admins</title>
}



<hr />
<div class="container-fluid">
    <form asp-controller="Roles" asp-action="Create" class="form-group">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control" style="max-width: 50%;" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-success" />
        </div>
    </form>
    <div>
        <a asp-action="Index" class="btn btn-outline-primary">Back to List</a>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        let sideLinks = document.querySelectorAll(".side-nav");
        sideLinks.forEach(e => e.classList.remove("active"));

        let activeLink = document.getElementById("admins");
        activeLink.classList.add("active");
    </script>
}
