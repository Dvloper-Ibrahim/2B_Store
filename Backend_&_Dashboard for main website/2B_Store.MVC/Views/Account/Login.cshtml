@model _2B_Store.DTO.UserSignInDto

@{
    ViewData["Title"] = "Login";
    //Layout = "_AdminDashboardLayout";

}

@section PageTitle {
    <title>2B - Dashboard</title>
}

<section class="bg0 p-t-104 p-b-116 mt-5">
    <div class="container-fluid d-flex align-items-center flex-column">
@*        <div class="flex-w flex-tr">
            <div class="">*@
                <form asp-action="Login" method="post" class="login-form">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <h4 class="mb-3 text-center">
                        Login to your account
                    </h4>
                    <div class="form-group">
                        <input asp-for="UserName" class="form-control" placeholder="Enter Your Username" />
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <div class="input-field position-relative">
                            <input asp-for="Password" class="form-control" placeholder="Enter Your Password" />
                            <i class="bx bx-hide show-hide"></i>
                        </div>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group form-check">
                        <input class="form-check-input" asp-for="RememberMe" />
                        <label asp-for="RememberMe" class="form-check-label">
                            @Html.DisplayNameFor(model => model.RememberMe)
                        </label>
                    </div>
                    <button class="btn btn-success d-block mx-auto text-center">Log in</button>
                </form>
@*            </div>
        </div>*@
    </div>
</section>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        const eyeIcons = document.querySelectorAll(".show-hide");

        eyeIcons.forEach((eyeIcon) => {
            eyeIcon.addEventListener("click", () => {
                const pInput = eyeIcon.parentElement.querySelector("input");
                if (pInput.type === "password") {
                    eyeIcon.classList.replace("bx-hide", "bx-show");
                    pInput.type = "text";
                    return;
                }
                eyeIcon.classList.replace("bx-show", "bx-hide");
                pInput.type = "password";
            });
        });
    </script>
}
